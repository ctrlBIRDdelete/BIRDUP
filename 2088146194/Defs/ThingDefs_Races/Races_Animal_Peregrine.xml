<Defs>
<ThingDef ParentName="AnimalThingBase">
    <defName>Peregrine_falcon</defName>
    <label>peregrine falcon</label>
    <description>The peregrine is renowned for its speed, reaching over 320 km/h (200 mph) during its characteristic hunting stoop. As is typical for bird-eating raptors, peregrine falcons are sexually dimorphic, with females being considerably larger than males.</description>
	
	<statBases>
      <MoveSpeed>4.1</MoveSpeed>
      <MarketValue>50</MarketValue>
      <LeatherAmount>0</LeatherAmount>
      <ComfyTemperatureMin>-15</ComfyTemperatureMin>
	  <ComfyTemperatureMax>35</ComfyTemperatureMax>
    </statBases>
    <tools>
      <li>
        <label>talons</label>
        <capacities>
          <li>Scratch</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
      </li>
      <li>
        <label>beak</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>3</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_EggLayer">
        <eggUnfertilizedDef>EggperegrinefalconUnfertilized</eggUnfertilizedDef>
        <eggFertilizedDef>EggperegrinefalconFertilized</eggFertilizedDef>
        <eggFertilizationCountMax>1</eggFertilizationCountMax>
        <eggLayIntervalDays>18</eggLayIntervalDays>
        <eggCountRange>3</eggCountRange>
      </li>
    </comps>
    <race>
	<herdAnimal>false</herdAnimal>
	<predator>true</predator>
			<wildBiomes>
        <BorealForest>0.7</BorealForest>
		<ColdBog>0.8</ColdBog>
		<Tundra>0.8</Tundra>
		<TemperateForest>0.6</TemperateForest>
		<TemperateSwamp>0.9</TemperateSwamp>
		<Desert>0.9</Desert>
		
        </wildBiomes>
      <body>Bird</body>
      <baseHungerRate>0.35</baseHungerRate>
      <baseBodySize>0.55</baseBodySize>
      <baseHealthScale>0.55</baseHealthScale>
      <foodType>CarnivoreAnimal, OvivoreAnimal</foodType>
	  <trainability>Advanced</trainability>
	  <maxPreyBodySize>0.8</maxPreyBodySize>
      <wildness>0.60</wildness>
      <manhunterOnTameFailChance>0.08</manhunterOnTameFailChance>
      <manhunterOnDamageChance>0.07</manhunterOnDamageChance>
      <mateMtbHours>10</mateMtbHours>
      <lifeExpectancy>18</lifeExpectancy>
	  <nuzzleMtbHours>72</nuzzleMtbHours>
      <lifeStageAges>
        <li>
          <def>AnimalBabyTiny</def>
          <minAge>0</minAge>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>0.35</minAge>
		  <soundCall>Peregrine_Call</soundCall>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>0.6</minAge>
          <soundWounded>Peregrine_Death</soundWounded>
          <soundDeath>Peregrine_Death</soundDeath>
          <soundCall>Peregrine_Call</soundCall>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
    </race>
    <tradeTags>
      <li>AnimalCommon</li>
    </tradeTags>
  </ThingDef>

